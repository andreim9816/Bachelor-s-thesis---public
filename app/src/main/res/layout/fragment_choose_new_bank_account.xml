<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.accounts.ChooseNewBankAccountFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_new_transaction_confirm_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_extra_large"
        app:contentPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/material_card_view_choose_new_bank_account_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/card_view_rounded_medium_size_4_sides">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:paddingVertical="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="Choose the new bank account you want to add!"
                android:textSize="@dimen/font_basic_text" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/material_card_view_choose_new_bank_account_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/margin_extra_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/MaterialCardview_home">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:justifyContent="space_evenly"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/material_card_view_choose_new_bank_account_bcr"
                android:layout_width="160dp"
                app:cardBackgroundColor="@color/red"
                android:layout_height="160dp"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/card_view_rounded_medium_size_4_sides">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_view_choose_new_bank_account_bcr"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_gravity="center"
                    android:background="@drawable/logo_bcr"
                    app:shapeAppearanceOverlay="@style/card_view_rounded_medium_size_4_sides" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/material_card_view_choose_new_bank_account_bt"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/card_view_rounded_medium_size_4_sides">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_view_choose_new_bank_account_bt"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_gravity="center"
                    android:background="@drawable/logo_bt"
                    app:shapeAppearanceOverlay="@style/card_view_rounded_medium_size_4_sides" />
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_choose_new_bank_account_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>