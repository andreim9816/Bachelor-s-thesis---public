<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AllBank" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">#99E8F7EE</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">#C9C4CA</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent
        </item>

        <!-- Toolbar colors -->
        <item name="actionBarTheme">@style/ToolbarStyle</item>
        <!-- Back arrow color -->
        <item name="drawerArrowStyle">@style/iconStyle</item>

        <!-- App font -->
        <item name="android:textViewStyle">@style/FontStyle</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>

        <!-- background in spate -->
        <item name="android:colorBackground">@color/primary</item>

        <!-- Card view -->
        <item name="colorSurface">@color/primary_dark</item>

        <!-- Text color -->
        <item name="android:textColor">@color/text_color</item>
        <item name="android:editTextColor">?attr/colorSecondary</item>

        <!-- TextInputLayout  -->
        <item name="textInputStyle">@style/Widget.TextInputLayout.OutlinedBox</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- DatePicker -->
        <item name="android:datePickerDialogTheme">@style/ThemeOverlay.App.DatePicker</item>

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <!-- Budget progress chart -->
    <style name="Widget.App.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackThickness">40dp</item>
        <item name="trackCornerRadius">24dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/primary_dark</item>
    </style>

    <!-- Toolbar color -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/text_color</item>
        <!-- Color of the bar -->
        <item name="colorPrimary">@color/primary_dark</item>
    </style>

    <!-- Back arrow color -->
    <style name="iconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <!-- Datepicker -->
    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Calendar background -->
        <item name="android:windowBackground">@color/primary_dark</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Day of the week color -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- TextInputLayout  -->
    <style name="Widget.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorError">@color/expenses_red</item>

        <!-- Selector used for EditText inside InputLayout -->
        <item name="boxStrokeColor">@color/input_layout_edit_text</item>
        <!-- Hint color when clicking on edit text -->
        <item name="hintTextColor">?attr/colorSecondary</item>
    </style>

    <!-- App font -->
    <style name="FontStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Button</item>
    </style>

    <style name="ThemeOverlay.Button" parent="">
        <!-- For filled buttons, your theme's colorPrimary provides the default background color of the component-->
        <item name="materialThemeOverlay">@style/button_primary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyApp.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/secondary</item>
    </style>

    <style name="MaterialCardview_home" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
    </style>

    <style name="card_view_rounded_big_size_4_sides" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="card_view_rounded_medium_size_4_sides" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

    <style name="card_view_rounded_small_size_4_sides" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <style name="card_view_rounded_extra_small_size_4_sides" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="icon_rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">32dp</item>
    </style>

    <style name="button_primary" parent="button_medium_size">
        <item name="cornerFamily">rounded</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">20dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:minWidth">110dp</item>
    </style>

    <style name="button_medium_size">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- No action bar theme for LoginActivity -->
    <style name="Theme.AllBank.NoActionBar" parent="Theme.AllBank">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>